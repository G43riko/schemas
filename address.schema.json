{
    "$id": "https://g43riko.github.io/schemas/address.schema.json",
    "$schema": "https://g43riko.github.io/schemas/schema.json",
    "type": "object",
    "properties": {
        "_id": {
            "$id": "#/properties/_id",
            "type": "string",
            "default": ""
        },
        "address": {
            "$id": "#/properties/address",
            "type": "string",
            "default": "",
            "description": "raw address"
        },
        "active": {
            "$id": "#/properties/active",
            "type": "boolean",
            "default": true,
            "description": "flag if address is active or not"
        },
        "country": {
            "$id": "#/properties/country",
            "type": "string",
            "default": ""
        },
        "city": {
            "$id": "#/properties/city",
            "type": "string",
            "default": ""
        },
        "street": {
            "$id": "#/properties/street",
            "type": "string",
            "default": ""
        },
        "streetNumber": {
            "$id": "#/properties/streetNumber",
            "type": "string",
            "default": ""
        },
        "zipCode": {
            "$id": "#/properties/zipCode",
            "type": "string",
            "default": ""
        },
        "latitude": {
            "$id": "#/properties/latitude",
            "type": "number",
            "default": 0,
            "minimum": -90,
            "maximum": 90
        },
        "longitude": {
            "$id": "#/properties/longitude",
            "type": "number",
            "default": 0,
            "minimum": -180,
            "maximum": 180
        }
    },
    "required": [
        "active"
    ]
}
